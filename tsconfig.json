{
    "compilerOptions": {
      "target": "ESNext",
      "useDefineForClassFields": true,
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "strict": true,
      "jsx": "react-jsx",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": "./",
      "paths": {
        "@/*": ["src/*"],
        "@views/*": ["src/views/*"],
        "@components/*": ["src/components/*"],
        "@styles/*": ["src/styles/*"],
        "@services/*": ["src/services/*"],
        "@hooks/*": ["src/hooks/*"]
      }
    },
    "include": ["src"]
  }
  